%div.grids{ style: "width:80%"}
  %table
    - (1..400).each_slice(20) do |row|
      %tr
        - row.each do | cell |
          %td.grid_color{ style: "background-color:#{get_color(cell)}", position: cell }
%div.side_bar{ style: "width:20%"}
  %h3
    = "Hi #{session[:user]['name']}"
  %h3
    = link_to "Dashboard", grids_path
  %h3
    = link_to "Leaderboard", leader_board_home_index_path, target: "_blank"
  %h3
    = link_to "Home" , home_index_path

  %label Please select the color
  %input#color_picker{:type => "color"}/

